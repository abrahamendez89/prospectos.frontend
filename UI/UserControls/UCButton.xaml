<UserControl x:Class="UI.UserControls.UCButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.UserControls" xmlns:fa="clr-namespace:Meziantou.WpfFontAwesome;assembly=Meziantou.WpfFontAwesome"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="rectangle" Grid.Column="0" Grid.ColumnSpan="2" Stroke="Black" StrokeThickness="1" Fill="#FFE0E0E0" RadiusY="2.302" RadiusX="2.302" Margin="2"></Rectangle>
        <Label Grid.Column="1" x:Name="lblOpcion" Content="Click me" Margin="5" HorizontalContentAlignment="Center"></Label>
        <fa:FontAwesomeIcon Grid.Column="0" x:Name="icon" SolidIcon="AddressBook" FontSize="20" Margin="10,0,10,0" />
    </Grid>
</UserControl>
