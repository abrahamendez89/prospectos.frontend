        xmlns:local="clr-namespace:miProyecto" xmlns:usercontrols="clr-namespace:UI.UserControls;assembly=UI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="226.073" Width="380.876">
